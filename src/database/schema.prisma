// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Chat {
  id          BigInt     @id
  firstName   String
  lastName    String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt()
  messages    Message[] // One-to-many
  model       Model? // One-to-one
  voice       Voice? // One-to-one
  characterId String?
  character   Character? @relation(fields: [characterId], references: [id]) // Many-to-one
}

model Character {
  id        String   @id @default(cuid())
  name      String
  prompt    String
  chats     Chat[] // One-to-many
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()
}

model Voice {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()

  chat   Chat   @relation(fields: [chatId], references: [id])
  chatId BigInt @unique
}

model Model {
  id        String   @id @default(cuid())
  name      String
  source    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()
  chat      Chat     @relation(fields: [chatId], references: [id]) // One-to-one
  chatId    BigInt   @unique
}

model Message {
  id        String   @id @default(cuid())
  text      String
  role      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()
  chat      Chat     @relation(fields: [chatId], references: [id]) // Many-to-one
  chatId    BigInt
}
