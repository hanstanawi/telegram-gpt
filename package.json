{
  "name": "telegram-gpt",
  "version": "1.0.0",
  "engines": {
    "node": ">= 18.x"
  },
  "description": "Telegram bot that leverages the power of ChatGPT with OpenAI",
  "keywords": [
    "node.js",
    "typescript",
    "nestjs",
    "openai",
    "telegram-bot",
    "docker",
    "github-actions"
  ],
  "homepage": "https://github.com/hanstanawi/telegram-gpt",
  "bugs": {
    "url": "https://github.com/hanstanawi/telegram-gpt/issues",
    "email": "hans.tanawi@outlook.com"
  },
  "repository": "github:hanstanawi/telegram-gpt",
  "license": "MIT",
  "author": "Hans Tanawi <hans.tanawi@outlook.com>",
  "scripts": {
    "build": "nest build",
    "db:deploy": "prisma migrate deploy",
    "db:up": "docker-compose up postgres -d --build",
    "db:down": "docker-compose down",
    "db:seed": "prisma db seed",
    "db:generate": "prisma generate",
    "db:view": "prisma studio",
    "db:test:deploy": "dotenv -e .env.test -- prisma migrate deploy",
    "db:test:up": "dotenv -e .env.test -- docker-compose -f docker-compose-test.yaml up -d --build",
    "db:test:down": "docker-compose -f docker-compose-test.yaml down",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "prepare": "husky install && prisma generate",
    "start": "nest start",
    "start:dev": "dotenv -e .env -- nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:types": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "dotenv -e .env.test -- jest --config ./test/jest-e2e.json",
    "test:e2e:watch": "dotenv -e .env.test -- jest --config ./test/jest-e2e.json --watch"
  },
  "dependencies": {
    "@nestjs/cache-manager": "^2.3.0",
    "@nestjs/common": "^10.4.15",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.4.15",
    "@nestjs/platform-express": "^10.4.20",
    "@prisma/client": "^6.15.0",
    "cache-manager": "^5.7.6",
    "gpt-tokenizer": "^3.0.1",
    "nestjs-pino": "^4.4.0",
    "nestjs-telegraf": "^2.8.0",
    "nestjs-zod": "^5.0.1",
    "openai": "^5.16.0",
    "pino-http": "^10.5.0",
    "pino-pretty": "^13.1.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "telegraf": "^4.16.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.1",
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.7",
    "@nestjs/testing": "^10.4.15",
    "@telegraf/types": "^9.0.0",
    "@types/cache-manager": "^4.0.6",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "dotenv-cli": "^10.0.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^28.14.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "jest": "^30.1.1",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "prisma": "^6.13.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.3",
    "ts-jest": "^29.4.1",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "prisma": {
    "schema": "src/database/schema.prisma",
    "seed": "ts-node src/database/seed.ts"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/$1"
    },
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
